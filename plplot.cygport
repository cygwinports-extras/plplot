NAME="plplot"
VERSION=5.10.0
RELEASE=1
CATEGORY="Science"
SUMMARY="Scientific plot library"
DESCRIPTION="PLplot is a cross-platform software package for creating scientific
plots. To help accomplish that task it is organized as a core C library,
language bindings for that library, and device drivers which control how the
plots are presented in non-interactive and interactive plotting contexts."
HOMEPAGE="http://plplot.sourceforge.net/"
SRC_URI="mirror://sourceforge/plplot/${P}.tar.gz"

PATCH_URI="
	http://pkgs.fedoraproject.org/cgit/plplot.git/plain/plplot-lua52.patch
	http://pkgs.fedoraproject.org/cgit/plplot.git/plain/plplot-ocaml.patch
	http://pkgs.fedoraproject.org/cgit/plplot.git/plain/plplot-octave.patch
	http://pkgs.fedoraproject.org/cgit/plplot.git/plain/plplot-octave38.patch
	5.9.9-cygwin.patch
	5.9.9-qhull.patch
"

DEPEND="pkgconfig(cairo)
	pkgconfig(freetype2)
	pkgconfig(lasi)
	pkgconfig(libagg)
	pkgconfig(pango)
	pkgconfig(QtGui)
	pkgconfig(QtSvg)
	ocaml(cairo.lablgtk2)
	perl(XML::DOM)
	perl(XML::Parser)
	python(numpy)
	python(PyQt4.QtGui)
	python(Tkinter)
	tcl(Itcl)
	tcl(Itk)
	tcl(Tk)"

