libplplotwxwidgets_devel_CONTENTS="usr/include/plplot/wx* usr/lib/libplplotwx*
                                   usr/lib/pkgconfig/plplotd-wxwidgets.pc"
libqsastime0_CONTENTS="usr/bin/cygqsastime-0.dll"
