WX_VERSION=2.8
inherit font java lua ocaml octave python tcl wxwidgets cmake


HOMEPAGE="http://plplot.sourceforge.net/"
SRC_URI="mirror://sourceforge/plplot/${P}.tar.gz"

PATCH_URI="5.9.9-cygwin.patch
           5.9.9-qhull.patch"

DEPEND="pkgconfig(cairo)
	pkgconfig(freetype2)
	pkgconfig(lasi)
	pkgconfig(libagg)
